<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Light_ReserveList_linearLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:paddingLeft="13dp"
        android:paddingStart="13dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/light_reserveList_Cardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/alram_blue"/>
                <TextView
                    android:id="@+id/light_reserveList_header_title"
                    android:textColor="#04284A"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Title header"/>
                <ImageView
                    android:id="@+id/light_reserveList_btn_expand_toggle"
                    android:src="@drawable/circle_plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/light_reserveList_RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/light_reserveList_infoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/light_reserveList_state_Imagebutton"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="20dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:background="#FFFFFF"
                        android:src="@drawable/light"/>
                    <TextView
                        android:id="@+id/light_reserveList_room_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:text="Room Name"
                        android:textColor="#000000"
                        android:textSize="20dp"/>
                </LinearLayout>
                <TimePicker
                    android:id="@+id/light_reserveList_timepicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/light_reserveList_infoLayout"
                    android:timePickerMode="spinner"/>
                <LinearLayout
                    android:id="@+id/light_reserveList_repeatLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/light_reserveList_timepicker"
                    android:gravity="center"
                    android:orientation="vertical">
                    <Switch
                        android:id="@+id/light_reserveList_repeatswitch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="반복"
                        android:layout_marginBottom="10dp" />
                    <LinearLayout
                        android:id="@+id/light_reserveList_dayLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="visible"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/light_reserveList_toggle_sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/light_toggle_day"
                            android:checked="false"
                            android:enabled="true"
                            android:textOff="일"
                            android:textOn="일" />

                        <ToggleButton
                            android:id="@+id/light_reserveList_toggle_mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_toggle_day"
                            android:checked="false"
                            android:layout_weight="1"
                            android:enabled="true"
                            android:textOn="월"
                            android:textOff="월"/>
                        <ToggleButton
                            android:id="@+id/light_reserveList_toggle_tus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_toggle_day"
                            android:checked="false"
                            android:layout_weight="1"
                            android:enabled="true"
                            android:textOn="화"
                            android:textOff="화"/>
                        <ToggleButton
                            android:id="@+id/light_reserveList_toggle_wen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_toggle_day"
                            android:checked="false"
                            android:layout_weight="1"
                            android:enabled="true"
                            android:textOn="수"
                            android:textOff="수"/>
                        <ToggleButton
                            android:id="@+id/light_reserveList_toggle_thu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_toggle_day"
                            android:checked="false"
                            android:layout_weight="1"
                            android:enabled="true"
                            android:textOn="목"
                            android:textOff="목"/>
                        <ToggleButton
                            android:id="@+id/light_reserveList_toggle_fri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_toggle_day"
                            android:checked="false"
                            android:layout_weight="1"
                            android:enabled="true"
                            android:textOn="금"
                            android:textOff="금"/>
                        <ToggleButton
                            android:id="@+id/light_reserveList_toggle_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_toggle_day"
                            android:checked="false"
                            android:layout_weight="1"
                            android:enabled="true"
                            android:textOn="토"
                            android:textOff="토"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/light_reserveList_repeatLayout">
                    <Button
                        android:id="@+id/light_reserveList_cancel_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:text="Cancel"/>
                    <Button
                        android:id="@+id/light_reserveList_delete_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:text="Delete"/>
                    <Button
                        android:id="@+id/light_reserveList_fix_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:text="Fix"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
