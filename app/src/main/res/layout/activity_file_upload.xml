<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileServer.FileUploadActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_Upload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative_Upload"/>

    <RelativeLayout
        android:id="@+id/relative_Upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:clipToPadding="true"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_Upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/upload_titleView"
            android:layout_width="399dp"
            android:layout_height="44dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="0dp"
            android:gravity="center_horizontal"
            android:text="파일이 업로드 될 경로"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/upload_subView"
            android:layout_width="399dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/upload_titleView"
            android:gravity="center_horizontal"
            android:text="link"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>