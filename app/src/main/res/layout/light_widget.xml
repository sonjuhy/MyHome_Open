<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/Light_widget_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_new_foreground"/>
        <TextView
            android:id="@+id/Light_widget_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="25dp"
            android:text="Light Widget"
            android:gravity="center"/>
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/refresh"/>

    </LinearLayout>
    <GridLayout
        android:id="@+id/Light_widget_content_layout"
        android:background="#BBBBBB"
        android:layout_below="@+id/Light_widget_title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </GridLayout>


</RelativeLayout>