<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="170dp"
    android:id="@+id/light_room_cardview"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:id="@+id/light_cardview_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/light_cardview_line_on">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/light_room_image"
            android:src="@drawable/light_on_cardview"
            />
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/light_cardview_name_text"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/light_cardview_state_text"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="State"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>