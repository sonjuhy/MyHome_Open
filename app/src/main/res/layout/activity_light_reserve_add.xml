<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Light.LightReserveAddActivity">

  <android.support.v7.widget.Toolbar
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/light_reserveAdd_toolbar"
      android:background="#FFFFFF"
      app:contentInsetStart="0dp"
      app:layout_constraintBottom_toTopOf="@+id/lightAdd_room_info"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
    <RelativeLayout
        android:id="@+id/relative_lightAdd_top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="15dp"
        android:clipToPadding="true"
        android:background="#FFFFFF">
      <Button
          android:id="@+id/lightAdd_room_cancel_button"
          android:layout_width="60dp"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:background="#FFFFFF"
          android:text="취소"
          android:layout_marginLeft="1dp"/>
      <ImageView
          android:id="@+id/lightAdd_imageView"
          android:layout_width="60dp"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/lightAdd_room_cancel_button"
          app:srcCompat="@drawable/light" />
      <TextView
          android:id="@+id/lightAdd_titleView"
          android:layout_width="184dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="0dp"
          android:elevation="3dp"
          android:layout_toRightOf="@id/lightAdd_imageView"
          android:gravity="center_vertical"
          android:text="예약 설정"
          android:textColor="#000000"
          android:textSize="20dp"
          android:textStyle="bold" />
      <Button
          android:id="@+id/lightAdd_room_save_button"
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:background="#FFFFFF"
          android:layout_centerVertical="true"
          android:text="저장"
          android:textSize="15dp"
          android:layout_toRightOf="@+id/lightAdd_titleView"/>

    </RelativeLayout>
  </android.support.v7.widget.Toolbar>

  <RelativeLayout
      android:id="@+id/lightAdd_room_info"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/light_reserveAdd_toolbar"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
    <LinearLayout
        android:id="@+id/light_reserveAdd_nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
      <ImageView
          android:layout_width="55dp"
          android:layout_height="55dp"
          android:src="@drawable/clipboard"/>
      <EditText
          android:id="@+id/light_reserveAdd_edittext"
          android:layout_width="match_parent"
          android:layout_height="55dp"
          android:hint="이름을 작성하세요."/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/light_reserveAdd_infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light_reserveAdd_nameLayout"
        android:orientation="vertical"
        android:gravity="center">
      <ImageView
          android:layout_width="75dp"
          android:layout_height="75dp"
          android:layout_marginTop="20dp"
          android:src="@drawable/light"/>
      <TextView
          android:id="@+id/light_reserveAdd_room_textview"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="20dp"
          android:gravity="center"
          android:text="Room Name"
          android:textColor="#000000"
          android:textSize="20dp"/>
    </LinearLayout>
    <RadioGroup
        android:checkedButton="@+id/toggle_on"
        android:id="@+id/light_reserveAdd_toggle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/light_reserveAdd_infoLayout"
        android:orientation="horizontal">
      <RadioButton
          android:layout_marginTop="1dp"
          android:layout_marginBottom="1dp"
          android:layout_marginLeft="1dp"
          android:id="@+id/toggle_off"
          android:background="@drawable/toggle_widget_background"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:button="@null"
          android:gravity="center"
          android:text="꺼짐"
          android:textColor="@android:color/black" />
      <RadioButton
          android:layout_marginRight="1dp"
          android:layout_marginTop="1dp"
          android:layout_marginBottom="1dp"
          android:id="@+id/toggle_on"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/toggle_widget_background"
          android:button="@null"
          android:gravity="center"
          android:text="켜짐"
          android:textColor="@android:color/black" />
    </RadioGroup>
    <TimePicker
        android:id="@+id/light_reserveAdd_timepicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/light_reserveAdd_toggle"
        android:timePickerMode="spinner"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light_reserveAdd_timepicker"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center">
      <Switch
          android:id="@+id/light_reserveAdd_togglerepeat"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:checked="false"
          android:text="반복"/>
      <LinearLayout
          android:id="@+id/light_reserveAdd_dayLayout"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:visibility="invisible"
          android:orientation="horizontal">
        <ToggleButton
          android:id="@+id/toggle_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_toggle_day"
            android:checked="false"
            android:layout_weight="1"
            android:textOn="일"
            android:textOff="일"/>
        <ToggleButton
            android:id="@+id/toggle_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_toggle_day"
            android:checked="false"
            android:layout_weight="1"
            android:textOn="월"
            android:textOff="월"/>
        <ToggleButton
            android:id="@+id/toggle_tus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_toggle_day"
            android:checked="false"
            android:layout_weight="1"
            android:textOn="화"
            android:textOff="화"/>
        <ToggleButton
            android:id="@+id/toggle_wen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_toggle_day"
            android:checked="false"
            android:layout_weight="1"
            android:textOn="수"
            android:textOff="수"/>
        <ToggleButton
            android:id="@+id/toggle_thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_toggle_day"
            android:checked="false"
            android:layout_weight="1"
            android:textOn="목"
            android:textOff="목"/>
        <ToggleButton
            android:id="@+id/toggle_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_toggle_day"
            android:checked="false"
            android:layout_weight="1"
            android:textOn="금"
            android:textOff="금"/>
        <ToggleButton
            android:id="@+id/toggle_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_toggle_day"
            android:checked="false"
            android:layout_weight="1"
            android:textOn="토"
            android:textOff="토"/>
      </LinearLayout>
    </LinearLayout>

  </RelativeLayout>

  </android.support.constraint.ConstraintLayout>